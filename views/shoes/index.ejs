<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/home.css' />
    </head>
    <nav>
        <% if (user) { %>
        <div><a href="/shoes"style="color: white">Home</a></div>
        <div><a href="/profile/<%= user._id %>"style="color: white">My Profile</a></div>
        <div><a href="/shoes/new"style="color: white" >Add post</a></div>
        <div class="logo"><img src="https://i.imgur.com/N1YQuge.png" width="80" ></div>
        <div><a href="/logout"style="color: white">LOG OUT</a></div>
        <% } else { %>
          <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
        <% } %>
      </nav>
<body>
    <form>
        <div class= "container">
            <div class= "posts ">
                <div class= "subject">
                    <center><div class="social-board"><img src="https://i.imgur.com/b9W2Mym.png"width="750" ></div></center>       
                    <aside class='flex-ctr '>Welcome <%= user.name %>, EXPLORE CREATIVE POST BELOW </aside>
                
            </div>
            <center><h1>POST BELOW</h1></center>
            <div class ="posts-row ">
                <ul>
        <% shoes.forEach(function(s){ %>
    <li>
    <div class = "list-el"> <img src="https://i.imgur.com/etTjOfO.png"height= "20"width="20"> <a href="/shoes/<%= s._id %>" class="subjectpost posts-colum"style="color: black"><%= s.subject %></a>
    <div class="likes posts-colum"> posted by <a href="/profile/<%= user._id %>"style="color: white"><%= user.name %></a>
        on <%= user.createdAt %> 
        <span class="likebtn-wrapper" data-theme="custom" data-icon_l="arr13-u" data-icon_d="arr13-d" data-icon_l_c_v="#10cc00" data-icon_d_c_v="#d5001a" data-label_c_v="#f9f9f9" data-f_family="Arial Black" data-label_fs="r" data-white_label="true" data-identifier="item_1" data-show_like_label="false" data-site_id="6244f0b1fa8fdf5b2d14154f"style="color: black"></span>
        <script>(function(d,e,s){if(d.getElementById("likebtn_wjs"))return;a=d.createElement(e);m=d.getElementsByTagName(e)[0];a.async=1;a.id="likebtn_wjs";a.src=s;m.parentNode.insertBefore(a, m)})(document,"script","//w.likebtn.com/js/w/widget.js");</script>
        
        <form action="/profile" method="POST">
            <input type="submit" value="save">
    </div>
            </form>




    </div>
    </li>
    <% }) %>  
    </ul>
    </div>
</form>  
</body>
</html>